# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/hostel_db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# Client URL
CLIENT_URL=http://localhost:5173

# Resend API Configuration (for email sending)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=Hostel Management <onboarding@resend.dev>
# Note: With free Resend account, you can only send to verified emails
# For production, verify your domain in Resend dashboard for custom email addresses

# Google OAuth Configuration
# Single client ID:
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
# Or multiple client IDs (comma-separated):
GOOGLE_CLIENT_IDS=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com,yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy.apps.googleusercontent.com
